{
  "dashboard": {
    "id": null,
    "uid": null,
    "title": "${DASHBOARD_NAME}",
    "tags": ["generated"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "type": "timeseries",
        "title": "HTTP Requests por C√≥digo de Status",
        "targets": [
          {
            "expr": "rate(flask_http_request_total[1m])",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "type": "timeseries",
        "title": "Dura√ß√£o M√©dia das Requisi√ß√µes (s)",
        "targets": [
          {
            "expr": "rate(flask_http_request_duration_seconds_sum[1m]) / rate(flask_http_request_duration_seconds_count[1m])",
            "legendFormat": "M√©dia por rota",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "type": "timeseries",
        "title": "Mem√≥ria em Uso (Bytes)",
        "targets": [
          {
            "expr": "process_resident_memory_bytes",
            "legendFormat": "Mem√≥ria",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "type": "timeseries",
        "title": "Uso de CPU (Total em segundos)",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[1m])",
            "legendFormat": "CPU",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      },
      {
        "type": "timeseries",
        "title": "üìà Requisi√ß√µes por segundo (com alerta)",
        "gridPos": { "x": 0, "y": 16, "w": 24, "h": 8 },
        "datasource": {
          "type": "prometheus",
          "uid": "${DATASOURCE_NAME}"
        },
        "targets": [
          {
            "expr": "rate(flask_http_request_total[1m])",
            "refId": "E"
          }
        ],
        "alert": {
          "name": "Alerta de Tr√°fego Alto",
          "conditions": [
            {
              "evaluator": { "type": "gt", "params": [10] },
              "operator": { "type": "and" },
              "query": { "params": ["E"] },
              "reducer": { "type": "avg" },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "1m",
          "frequency": "1m",
          "handler": 1,
          "noDataState": "no_data"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "red", "value": 10 }
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "type": "timeseries",
        "title": "üî• Erros 5xx por segundo (com alerta)",
        "gridPos": { "x": 0, "y": 24, "w": 24, "h": 8 },
        "datasource": {
          "type": "prometheus",
          "uid": "${DATASOURCE_NAME}"
        },
        "targets": [
          {
            "expr": "rate(flask_http_request_total{status=~\"5..\"}[1m])",
            "refId": "F"
          }
        ],
        "alert": {
          "name": "Alerta de Erros 5xx",
          "conditions": [
            {
              "evaluator": { "type": "gt", "params": [0] },
              "operator": { "type": "and" },
              "query": { "params": ["F"] },
              "reducer": { "type": "sum" },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "1m",
          "frequency": "1m",
          "handler": 1,
          "noDataState": "no_data"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "orange", "value": 1 }
              ]
            }
          },
          "overrides": []
        }
      }
    ]
  },
  "folderTitle": "${FOLDER_NAME}",
  "overwrite": true
}
